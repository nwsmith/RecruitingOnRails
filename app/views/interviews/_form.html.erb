<%= form_for(@interview) do |f| %>
    <% if @interview.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@interview.errors.count, "error") %> prohibited this interview from being saved:</h2>

          <ul>
            <% @interview.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :candidate_id %>
      <%= f.collection_select(:candidate_id, Candidate.all, :id, :name, :include_blank => true) %>
    </div>
    <div class="field">
      <%= f.label :interview_type_id %>
      <%= f.collection_select(:interview_type_id, InterviewType.all, :id, :name, :include_blank => true) %>
    </div>
    <div class="field">
      <%= f.label :meeting_time %>
      <br/>
      <%= f.text_field :meeting_time, :class => 'datepicker' %>
    </div>
    <div class="field">
      <%= f.label :notes %>
      <br/>
      <%= f.text_area :notes %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
