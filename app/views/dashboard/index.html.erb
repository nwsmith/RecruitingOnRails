<h1>Dashboard</h1>

<%= link_to 'New Candidate', new_candidate_path %>

<%= form_tag('/candidates/search') do -%>
    <%= label_tag(:q, 'Search by name:') %>
    <%= text_field_tag(:q) %>
    <%= submit_tag('Search') %>
<% end -%>

<p>
  <% unless @dashboard_data[:headcount_target].nil? %>
      Note: Headcount target is <%= @dashboard_data[:headcount_target] %>, so we are looking for <%= @dashboard_data[:headcount_left] %> developers.
  <% end %>

  <%= candidates_table @dashboard_data[:candidates_by_status], {:include_source => true, :include_position => true, :include_events => true, :include_references => true} %>

<hr>

<%= counts_by_status %>

<hr>

<table>
  <tr>
    <th>Experience Legend</th>
  </tr>
  <% ExperienceLevel.all.each do |experience_level| %>
      <tr>
        <td><%= color_span(experience_level, get_name(experience_level), true) %></td>
      </tr>
  <% end %>
</table>