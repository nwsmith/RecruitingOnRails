<% form_tag(:controller => :login, :action => :login) do %>
    <p>
      <label for="username">Username</label>
      <%=  text_field_tag 'username', params[:username] %>
    </p>
    <p>
      <label for="password">Password</label>
      <%=  password_field_tag 'password' %>
    </p>
    <%=  submit_tag 'Log In' %>
<% end %>