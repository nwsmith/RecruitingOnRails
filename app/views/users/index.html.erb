<h1>Listing users</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Admin</th>
    <th>Active</th>
    <th>HR</th>
    <th>Manager</th>
    <th>Auth name</th>
    <th>User name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.admin %></td>
    <td><%= user.active %></td>
    <td><%= user.hr %></td>
    <td><%= user.manager %></td>
    <td><%= user.auth_name %></td>
    <td><%= user.user_name %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

